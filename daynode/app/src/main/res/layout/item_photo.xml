<?xml version="1.0" encoding="utf-8"?>
<com.study.daynode.common.photo.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:placeholderImage="@drawable/icon_empty_photo"
        fresco:placeholderImageScaleType="fitXY"
        />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@drawable/selector_checkbox"
        android:button="@null"
        android:focusable="false" />

</com.study.daynode.common.photo.SquareRelativeLayout>

<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@android:color/white</item>
    <item name="colorPrimaryDark">@android:color/white</item>
    <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
    <item name="colorAccent">@android:color/white</item>
    <item name="windowActionBar">true</item>
  </style>

  <style name="AppActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowActionBar">true</item>
    <item name="android:fitsSystemWindows">false</item>
  </style>

  <style name="TakiPickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
    <item name="android:colorAccent">@color/themeColor_one</item>
  </style>

  <style name="MistuhaPickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
    <item name="android:colorAccent">@color/themeColor_two</item>
  </style>

  <style name="CustomPickerDialogTheme" parent="android:Theme.Material.Light.Dialog"></style>

  <style name="ToolbarTheme" parent="AppTheme">
    <item name="android:textColorPrimary">@android:color/white</item>
    <item name="android:textColorSecondary">@android:color/white</item>
    <item name="colorControlActivated">@android:color/white</item>
  </style>

  <style name="EditTextTheme">
    <item name="android:textSize">@dimen/y18</item>
    <item name="android:textColor">@android:color/black</item>

    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>


  <style name="MyDialogStyle" parent="AppTheme">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowNoTitle">true</item>　　　　　　　
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>

  <item name="tag_position" type="id"/>
  <item name="tag_photo" type="id"/>

  <style name="PopupAnimaFade" parent="android:Animation">
    <item name="android:windowEnterAnimation">@anim/basepopup_fade_in</item>
    <item name="android:windowExitAnimation">@anim/basepopup_fade_out</item>
  </style>

  <style name="Theme.AppCompat.Light.Dialog.Alert.Self"
      parent="@style/Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@android:color/black</item>
  </style>

  <style name="BlackTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimaryDark">@color/black</item>
    <item name="android:windowIsTranslucent">true</item>
  </style>
</resources>
